{
    "name": "wyrihaximus/react-event-loop-rx-scheduler-hook-up",
    "description": "\ud83e\ude9d Hook up ReactPHP Event Loop to the RxPHP Scheduler",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "react/event-loop": "^1.5",
        "reactivex/rxphp": "^2.0.12"
    },
    "require-dev": {
        "wyrihaximus/async-test-utilities": "^7.2"
    },
    "autoload": {
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\React\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "icanhazstring/composer-unused": true,
            "infection/extension-installer": true
        },
        "platform": {
            "php": "8.2.13"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ]
    }
}
